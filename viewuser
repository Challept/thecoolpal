<body>
    <div class="container">
        <h1>üîç Webstay - S√∂k Anv√§ndare</h1>
        <p>S√∂k efter anv√§ndare i databasen.</p>

        <input type="text" id="searchInput" placeholder="Skriv ett namn..." oninput="fetchUsers()">
        <button class="search-button" onclick="fetchUsers()">S√∂k</button>

        <p class="total-users" id="totalUsers">Laddar antal anv√§ndare...</p>

        <div id="results"></div>
    </div>

    <script>
        // ‚úÖ Fetch users every 20 seconds
          setInterval(fetchUsers, 10000);

        function fetchUsers() {
            const searchValue = document.getElementById("searchInput").value;
          const url = searchValue ? `https://api.webstay.se/get-users?name=${searchValue}` : "https://api.webstay.se/get-users";

            fetch(url)
            .then(res => res.json())
            .then(data => {
                document.getElementById("totalUsers").innerText = `üë• Totalt antal anv√§ndare: ${data.totalUsers}`;

                const resultsContainer = document.getElementById("results");
                resultsContainer.innerHTML = ""; // Clear previous results

                if (data.users.length === 0) {
                    resultsContainer.innerHTML = "<p>‚ùå Ingen anv√§ndare hittades!</p>";
                    return;
                }

                data.users.forEach(user => {
                    const userCard = document.createElement("div");
                    userCard.classList.add("user-card");
                    userCard.innerHTML = `
                        <p><strong>Namn:</strong> ${user.name}</p>
                        <p><strong>Google ID:</strong> ${user.googleID}</p>
                        <p><strong>E-post:</strong> ${user.email}</p>
                    `;
                    resultsContainer.appendChild(userCard);
                });
            })
            .catch(err => {
                console.error("‚ùå [ERROR] Kunde inte h√§mta anv√§ndare:", err);
                document.getElementById("totalUsers").innerText = "‚ö†Ô∏è Fel vid h√§mtning!";
            });
        }

        // ‚úÖ Fetch users on page load
        fetchUsers();
    </script>
